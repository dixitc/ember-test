	margin: auto;
	font-family: 'Roboto';
	width: 90%;
	margin: auto
}
.feedback-satisfaction{
	height: 40%;
}
#feedback{
	height: 68%;
	background: #ffffff;
}


#myCanvas{
	width: 100%;
	height: 200px;
	margin: auto;
}

.add-form{
}
.add-input{
	border: none;
    outline: none;
    background: transparent;
    color: #4d4d4d;
    border-bottom: 1px solid #cccccc;
    width: 100%;
    height : 100%;
    font-size: 16px;
    font-family: 'Roboto';
    font-weight: 300;
}

.feedback-input{
	height : 20%;
	margin-top: 15%;
}

#action-button{
		font-size: 30px;
		font-weight: 100;
		position: absolute;
		display: inline-block;
		width: 56px;
		height: 56px;
		top:170px;
		right:0px;
		margin-right:20px;
		margin-bottom: 20px;
		border-radius: 50%;
		border:none;
		outline: none;
		color: #fff;
		overflow: hidden;
		-webkit-user-drag: none;
		-webkit-transform: scale(1) rotate(360deg);
		transform: scale(1) rotate(360deg);
		-webkit-transition: -webkit-transform 150ms cubic-bezier(.4,0,1,1);
		transition: transform 150ms cubic-bezier(.4,0,1,1);
		transition: box-shadow 0.2s cubic-bezier(0.4, 0, 0.2, 1);
		transition-delay: 0.2s;
		transition: transform 0.25s;
		box-shadow: 0 2px 5px 0 rgba(0, 0, 0, 0.26);
		background-color: #E7283A;
		z-index:4;	
}

.ember-view{
	height: 600px;
}

p{
	margin: 0 0 10px;
	padding-left: 20px;
	font-family: 'Roboto';
	color: #999999;
	font-size: 15px;
	font-weight: 400;	
}

.card-well{
	margin : auto;
	margin-top: 15px;
	width: 90%;
	height: 70px;
	color: #999999;
	line-height: 60px;
	text-align: center;	
	background-color: #E5E5E5;
	margin-bottom: 20px;
	border-radius: 3px;
}

.card-well-text{
	display: inline-block;
	vertical-align: middle;
	line-height: normal;
	font-size: 13px;
	width: 80%;
	
	
	font-family: 'Roboto';
	font-weight: 400;	
}

#myCanvas{
	display: none;
	width: 80%;
